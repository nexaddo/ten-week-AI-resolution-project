# Database Connection
# PostgreSQL connection string for local development
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resolutions

# Session Secret (used for session encryption)
# Generate a random string: `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
SESSION_SECRET=your-random-session-secret-here

# OAuth Configuration (for Replit auth integration)
# ISSUER_URL=https://replit.com/oidc
# REPL_ID=your-replit-id

# Node Environment
NODE_ENV=development

# Port (optional, defaults to 5000)
# PORT=5000
